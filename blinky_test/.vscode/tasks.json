{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and create c_cpp_properties.json",
            "type": "shell",
            "command": "make clean && make -j | python3 ../common/vscode/c_cpp_properties.py -C arm-none-eabi-gcc > ./.vscode/c_cpp_properties.json",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make -j",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": "$gcc"
        }
    ]
}
